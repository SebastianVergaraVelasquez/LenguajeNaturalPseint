Algoritmo ConversionDeUnidadesDeLongitud
	ValorenCentimetros =0;
	ValorenPulgadas=0;
	FactordeConversion=2.54;
	Escribir 'Ingrese un valor en centimetros';
	Leer ValorenCentimetros;
	ValorenPulgadas = ValorenCentimetros/FactordeConversion;
	Escribir ValorenCentimetros,' cm son ' ValorenPulgadas, ' pulgadas.'
FinAlgoritmo
